{% extends 'admin.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<section>
	<div class="container bg-center">
		<div class="row p-3">
			<h1>Produit</h1>
			<div class="col-6">
				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ produit.id }}</td>
						</tr>
						<tr>
							<th>Caracteristiques</th>
							<td>{{ produit.caracteristiques }}</td>
						</tr>
						<tr>
							<th>Nom</th>
							<td>{{ produit.nom }}</td>
						</tr>
						<tr>
							<th>Stock</th>
							<td>{{ produit.stock }}</td>
						</tr>
						<tr>
							<th>Prixht</th>
							<td>{{ produit.prixht }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ produit.description }}</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="col-6 text-center">
					<img src="/assets/src/{{produit.photo}}"class="img-fluid" width="320px">
					<div>{{ produit.photo }}</div><br>
			</div>
		</div>
		<div class="row p-3">
			<div class="col-md-3">
					<a class="btn-block btn btn-danger font-weight-bold text-light" href="{{ path('produit_index') }}"role="button">Retour</a>
			</div>
			<div class="col-md-3">
					<a class="btn-block btn btn-primary text-light font-weight-bold text-light" href="{{ path('produit_edit', {'id': produit.id}) }}"role="button">Modifier</a>
			</div>
			{# <div class="col-md-3">
				<button class="btn-block btn btn-danger text-light font-weight-bold">
					{{ include('produit/_delete_form.html.twig') }}
				</button>
			</div> #}
		</div>
	</div>
</section>






{% endblock %}
